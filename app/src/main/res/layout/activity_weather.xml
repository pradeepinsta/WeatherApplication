<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:hint="Enter city Name"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:id="@+id/editTextCityName"
            android:inputType="textPersonName">

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/search"
            tools:ignore="SpeakableTextPresentCheck">

        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_weather"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCityWeather"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:text="London , GB"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="25dp"
                android:scaleType="fitXY"
                android:id="@+id/imageViewWeather"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTempWeather"
                    android:text="25 C"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewWeatherConditionWeather"
                    android:text="Few Clouds"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details :"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max. Temp."
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Temp."
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textViewHumidityWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 30 C"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textViewMaxTempWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 18 C"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textViewMinTempWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textViewPressureWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textViewWindWeather"/>



            </LinearLayout>



        </LinearLayout>




    </LinearLayout>



</LinearLayout>